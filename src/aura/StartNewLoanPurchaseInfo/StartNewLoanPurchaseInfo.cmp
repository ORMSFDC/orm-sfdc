                                </ui:message>
                            </aura:if>
                        </div>
                        <div class="nextSteps">
                            <ui:button class="myBtn slds-button slds-button_stateful slds-not-selected slds-button_brand btn" aura:id="nextStep" label="Save and Continue"
                                press="{!c.validateandgo}" />
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</aura:component>
