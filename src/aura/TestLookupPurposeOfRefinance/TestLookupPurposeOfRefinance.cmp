<aura:component controller="OnBaseLookups" implements="flexipage:availableForAllPageTypes">
    
    <aura:attribute name="cmdPurposeOfRefinance" type="Lookup_Purpose_of_Refinance_Keyword__mdt" 
                    default="{'sobjectType':'Lookup_Purpose_of_Refinance_Keyword__mdt'}" />
    <aura:attribute name="loan" type="Loan_New__c" default="{'sobjectType':'Loan_New__c'}" />
    <aura:attribute name="keyword" type="String" />
    
    <div class="white">
        <lightning:layout>
            <lightning:layoutItem padding="around-small" size="12">
                <div aria-labelledby="formlookup">
                    <fieldset class="slds-box slds-theme--default slds-container--small">
                        <legend id="formlookup" class="slds-text-heading--small slds-p-vertical--medium">
                            PurposeOfRefinance Lookup
                        </legend>
                        
                        <form class="slds-form--stacked">
                            <div class="slds-text-heading_small slds-p-vertical--small">
                            	Loan Type
                                <!--force:inputField value="{!v.cmdPurposeOfRefinance.Product_Type__c}" /-->
                                <force:inputField value="{!v.loan.Product_Type__c}" />
                            </div>                            
                            <div class="slds-text-heading_small slds-p-vertical--small">
                            	Mortgage Applied For
                                <!--force:inputField value="{!v.cmdPurposeOfRefinance.Mortgage_Applied_for__c}" /-->
                                <force:inputField value="{!v.loan.Mortgage_Applied_for__c}" />
                            </div>                            
                            <div class="slds-text-heading_small slds-p-vertical--small">
                            	Rate Type
                                <!--force:inputField value="{!v.cmdPurposeOfRefinance.Rate_Type__c}" /-->
                                <force:inputField value="{!v.loan.Rate_Type__c}" />
                            </div>                            
                            <lightning:button label="Get Keyword" onclick="{!c.clickGetKeyword}" />
                        </form>
                        
                        <br/><br/>
                        <div class="slds-text-heading_medium">
                            Keyword: <ui:outputText value="{!v.keyword}" class="TextColor_red" />   
                        </div>                        
                    </fieldset>
                </div>
            </lightning:layoutItem>
        </lightning:layout>
    </div>
    
</aura:component>